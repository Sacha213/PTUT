<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="0dp" android:top="0dp">
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="@color/gris_fonce" />
                </shape>
            </item>

            <item android:bottom="2dp" android:left="0dp">
                <shape>
                    <gradient android:angle="135"
                        android:endColor="#F4CBB6" android:startColor="#fff" />
                    <stroke android:width="1dp" android:color="@color/gris_fonce" />
                    <corners android:radius="10dp" />

                </shape>
            </item>
        </layer-list>
    </item>

</selector>