<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NouvelleAnnonce">

    <TextView
        android:id="@+id/textNouvelleAnnonce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nouvelle Annonce"
        android:textSize="40dp"
        android:gravity="center"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textNouvelleAnnonce"
        android:background="@color/gris_claire" />

    <EditText
        android:id="@+id/titreNewAnnonce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Titre"
        android:inputType="text"
        android:layout_below="@+id/divider2"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/textTypeAnnonce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type d'annonce :"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/titreNewAnnonce"
        android:layout_marginTop="30dp"
        />

    <RadioGroup
        android:id="@+id/radioAnnonce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTypeAnnonce"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >

        <RadioButton
            android:id="@+id/checkBoxPerte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Perdu/Trouvé" />

        <RadioButton
            android:id="@+id/checkBoxInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Information"
            />

        <RadioButton
            android:id="@+id/checkBoxEnquete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Enquêtes"
            android:onClick="onCheckBoxClicked"
            />



        <RadioButton
            android:id="@+id/checkBoxAutres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Autres"
            />

    </RadioGroup>


    <TextView
        android:id="@+id/textContenuAnnonce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contenu :"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/radioAnnonce"
        android:layout_marginTop="20dp"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textContenuAnnonce"
        android:layout_above="@+id/boutonPublierAnnonce"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/ContenuAnnonce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:text="\n\n"
            android:background="@color/gris_claire"/>
    </ScrollView>

    <Button
        android:id="@+id/boutonPublierAnnonce"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/divider"
        android:background="@color/vert_claire"
        android:text="Publier Annonce"
        android:textSize="20dp"
        android:textColor="@color/white" />

    <!-- Menu  -->



    <ImageView
        android:id="@+id/calendrier"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25.75dp"
        android:layout_marginLeft="25.75dp"
        android:layout_marginEnd="327.25dp"
        android:layout_marginRight="327.25dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/calendrier" />

    <ImageView
        android:id="@+id/notes"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="101.5dp"
        android:layout_marginLeft="101.5dp"
        android:layout_marginEnd="251.5dp"
        android:layout_marginRight="251.5dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/classe" />

    <ImageView
        android:id="@+id/informations"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="177.25dp"
        android:layout_marginLeft="177.25dp"
        android:layout_marginEnd="175.75dp"
        android:layout_marginRight="175.75dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/actualite" />

    <ImageView
        android:id="@+id/drive"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="253dp"
        android:layout_marginLeft="253dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/nuage" />

    <ImageView
        android:id="@+id/messagerie"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="327.25dp"
        android:layout_marginLeft="327.25dp"
        android:layout_marginEnd="25.75dp"
        android:layout_marginRight="25.75dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/messagerie" />



    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:background="@color/gris_claire" />




</RelativeLayout>