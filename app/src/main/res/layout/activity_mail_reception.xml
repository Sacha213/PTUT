<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MailReception">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_mail"
        android:layout_above="@+id/progressBar"
        android:rotation="-4"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="-10dp"/>



    <TextView
        android:id="@+id/textMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mail"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textMail"
        android:background="@color/gris_claire"
        android:rotation="-4"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressTint="@color/bleu_claire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider2"
        android:rotation="-4"/>

    <ImageView
        android:id="@+id/imageEcrire"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/progressBar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/crayon"
        android:elevation="4dp"
        android:background="@drawable/shadow"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/progressBar"
        android:layout_above="@+id/divider">

        <LinearLayout
            android:id="@+id/scrollReceptionMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </ScrollView>



    <!-- Menu  -->

    <ImageView
        android:id="@+id/calendrier"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25.75dp"
        android:layout_marginLeft="25.75dp"
        android:layout_marginEnd="327.25dp"
        android:layout_marginRight="327.25dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/calendrier" />

    <ImageView
        android:id="@+id/notes"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="101.5dp"
        android:layout_marginLeft="101.5dp"
        android:layout_marginEnd="251.5dp"
        android:layout_marginRight="251.5dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/cartable" />

    <ImageView
        android:id="@+id/informations"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="177.25dp"
        android:layout_marginLeft="177.25dp"
        android:layout_marginEnd="175.75dp"
        android:layout_marginRight="175.75dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/news" />

    <ImageView
        android:id="@+id/drive"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="253dp"
        android:layout_marginLeft="253dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/nuage" />

    <ImageView
        android:id="@+id/messagerie"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="327.25dp"
        android:layout_marginLeft="327.25dp"
        android:layout_marginEnd="25.75dp"
        android:layout_marginRight="25.75dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/messagerie_v2" />



    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:background="@color/gris_claire" />


</RelativeLayout>